<main>

 <div class="container">
  <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this obj from being saved:
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
 </ul>
  <% end %>
  <div class="row">

    <%= render 'shared/userinfo', user: @current_user ,book: @book %>

    <div class="col-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>

       <tr>
        <td>
         <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(100,100) %>
         <% end %>
        </td>
        <td>
         <%= link_to "books/#{book.id}" do %>
         <span><%= book.title %></span>
         <% end %>
        </td>
        <td>
         <span><%= book.body %></span>
        </td>
       </tr>
       <% end %>
      </tbody>
     </table>
    </div>

  </div>
 </div>

</main>